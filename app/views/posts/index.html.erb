<ul class="filterposts" style="justify-content: space-between;">
  <div style="display:flex">
    <li><%= link_to 'top', posts_path(sort: 'top') %></li>
    <li><%= link_to 'newest', posts_path(sort: 'newest') %></li>
    <li><%= link_to 'commented', posts_path(sort: 'commented') %></li>
  </div>

  <div style="display:flex">
    <li><%= link_to 'all', posts_path() %></li>
    <li><%= link_to 'links', posts_path(sort: 'links') %></li>
    <li><%= link_to 'threads', posts_path(sort: 'threads') %></li>
  </div>
</ul>

<div id="posts" class="posts">
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
</div>