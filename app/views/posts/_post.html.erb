<div class="postitem" id=post.id>
  <div class="vote">
      <button type="button" onclick="likePost()"><%= post.likes %> ↑</button>  
      <button type="button" onclick="dislikePost()"><%= post.dislikes %> ↓</button>  
  </div>
  <div class="item">
    <h3><%= link_to post.title, post, :class=>'link' %> <span class="domain"> (<%= post.url %>)</span></h3>
    <h4><%= post.user_id %>, Created at: <%= post.created_at.strftime("%H:%M") %></h4>
    <p>3 comments boost more</p>
  </div>
</div>

<script>
  var liked = false;
  var disliked = false;

  function likePost() {
    #liked
    liked = true;
  }

  function dislikePost() {
    disliked = true;
  }
</script>