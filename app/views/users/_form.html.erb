<%= form_for @user, html: { multipart: true } do |f| %>
  <!-- Otros campos del formulario -->

  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :cover %><br>
    <%= f.file_field :cover %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>